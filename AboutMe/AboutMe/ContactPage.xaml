<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="AboutMe.ContactPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Contact Page"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                TextColor="Black"
                FontSize="40"
                FontAttributes="Bold"/>

            <Entry Placeholder="Name" 
                   x:Name="nameEntry"
                   Margin="0,20,0,0"/>

            <Entry Placeholder="Email" 
                   x:Name="emailEntry"
                   Margin="0,20,0,0"/>

            <Entry Placeholder="Phone Number" 
                   x:Name="phoneEntry"
                   Margin="0,20,0,0"/>

            <Entry Placeholder="Question" 
                   x:Name="questionEntry"
                   Margin="0,20,0,0"/>

            <Button Text="Submit" TextColor="White" BackgroundColor="Black" Clicked="Button_Clicked" 
                        HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="200"
                        Margin="0,20,0,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>